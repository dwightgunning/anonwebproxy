root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.json]
indent_size = 2

[*.sh]
indent_size = 2

[services/**/run]
indent_size = 4

[Dockerfile]
indent_size = 2
binary_next_line = true
